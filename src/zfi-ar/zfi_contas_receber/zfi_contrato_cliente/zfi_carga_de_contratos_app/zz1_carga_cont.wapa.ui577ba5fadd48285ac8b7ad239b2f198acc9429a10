            /* ===================================================================&nbsp;                                                                                                                                                                       
            Define parâmetros                                                                                                                                                                                                                                  
            =================================================================== */                                                                                                                                                                             
                oFileUploader.setName("Simple Uploader");                                                                                                                                                                                                      
                oFileUploader.setUploadUrl(sSource);                                                                                                                                                                                                           
                oFileUploader.setSendXHR(true);                                                                                                                                                                                                                
