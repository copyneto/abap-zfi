                /* ===================================================================&nbsp;                                                                                                                                                                   
                Chama diálogo com a lógica de carga&nbsp;                                                                                                                                                                                                      
                =================================================================== */                                                                                                                                                                         
                oUploadDialog.addContent(oFileUploader);                                                                                                                                                                                                       
                oUploadDialog.addContent(this.GetRadioButtonGroup());                                                                                                                                                                                          
                oUploadDialog.setBeginButton(oCancelButton);                                                                                                                                                                                                   
