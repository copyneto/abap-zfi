                                    }.bind(this)                                                                                                                                                                                                               
                                );                                                                                                                                                                                                                             
                                                                                                                                                                                                                                                               
                                oFileUploader.upload();                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               
                            }.bind(this))                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
                        }.bind(this)                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
                        var mParameters = {                                                                                                                                                                                                                    
