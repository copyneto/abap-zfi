                            dataloss: false                                                                                                                                                                                                                    
                        };                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
                        this.extensionAPI.securedExecution(fnFunctionTeste, mParameters);                                                                                                                                                                      
                                                                                                                                                                                                                                                               
