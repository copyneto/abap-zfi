FORM DB_UPD_ZVFI_AUTBANC_LOG .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZVFI_AUTBANC_LOG.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZVFI_AUTBANC_LOG-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTFI_AUTBANC_LOG WHERE
  CODIGO = ZVFI_AUTBANC_LOG-CODIGO .
    IF SY-SUBRC = 0.
    DELETE ZTFI_AUTBANC_LOG .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZTFI_AUTBANC_LOG WHERE
  CODIGO = ZVFI_AUTBANC_LOG-CODIGO .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZTFI_AUTBANC_LOG.
    ENDIF.
ZTFI_AUTBANC_LOG-CLIENT =
ZVFI_AUTBANC_LOG-CLIENT .
ZTFI_AUTBANC_LOG-CODIGO =
ZVFI_AUTBANC_LOG-CODIGO .
