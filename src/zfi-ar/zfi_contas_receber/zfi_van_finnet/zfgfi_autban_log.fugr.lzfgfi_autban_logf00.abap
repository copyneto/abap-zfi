ZVFI_AUTBANC_LOG-MSGTYPE .
ZTFI_AUTBANC_LOG-DIRETORIO =
ZVFI_AUTBANC_LOG-DIRETORIO .
ZTFI_AUTBANC_LOG-MESSAGE =
ZVFI_AUTBANC_LOG-MESSAGE .
    IF SY-SUBRC = 0.
    UPDATE ZTFI_AUTBANC_LOG ##WARN_OK.
    ELSE.
    INSERT ZTFI_AUTBANC_LOG .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
